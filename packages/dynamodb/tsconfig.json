{
	"compilerOptions": {
		"strict": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"target": "ESNext",
		"types": ["node", "vitest/globals"],
		"lib": ["es2022"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"declaration": true,
		"outDir": "dist"
	},
	"include": ["src"]
}
