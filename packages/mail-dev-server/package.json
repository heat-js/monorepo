{
	"name": "@heat/mail-dev-server",
	"version": "0.0.1",
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"bin": "./dist/bin.js",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/heat-js/monorepo/tree/master/packages/mail-dev-server"
	},
	"scripts": {
		"start": "yarn build; node ./dist/bin.js start ./test -a userName='Ken nedy'",
		"build": "yarn tsup src/index.ts src/bin.ts --format cjs,esm --dts-resolve --clean",
		"publish": "yarn build; yarn npm publish --access=public"
	},
	"vitest": {
		"exclude": "./test/data/**"
	},
	"dependencies": {
		"@heat/code": "workspace:^",
		"@heat/mail-components": "workspace:^",
		"commander": "^10.0.0"
	},
	"devDependencies": {
		"tsup": "^6.5.0"
	}
}
